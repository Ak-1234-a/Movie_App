<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7FAFC">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0D47A1"
        android:popupTheme="@style/ToolbarPopupTheme"
        android:title="Movies"
        android:titleTextColor="#FFFFFF"/>


    <!-- Movie Grid -->
    <GridLayout
        android:id="@+id/movieGrid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:useDefaultMargins="true"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- MOVIE CARD 1 -->
        <LinearLayout
            android:id="@+id/movie1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="8dp"
            android:elevation="4dp"
            android:layout_margin="8dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:src="@drawable/movie_poster1"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jananayagan"
                android:textStyle="bold"
                android:textColor="#222F3E"
                android:gravity="center"
                android:paddingTop="8dp"/>
        </LinearLayout>

        <!-- MOVIE CARD 2 -->
        <LinearLayout
            android:id="@+id/movie2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="8dp"
            android:elevation="4dp"
            android:layout_margin="8dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:src="@drawable/movie_poster2"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Leo"
                android:textStyle="bold"
                android:textColor="#222F3E"
                android:gravity="center"
                android:paddingTop="8dp"/>
        </LinearLayout>

        <!-- MOVIE CARD 3 -->
        <LinearLayout
            android:id="@+id/movie3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="8dp"
            android:elevation="4dp"
            android:layout_margin="8dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:src="@drawable/movie_poster3"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jailer"
                android:textStyle="bold"
                android:textColor="#222F3E"
                android:gravity="center"
                android:paddingTop="8dp"/>
        </LinearLayout>

        <!-- MOVIE CARD 4 -->
        <LinearLayout
            android:id="@+id/movie4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="8dp"
            android:elevation="4dp"
            android:layout_margin="8dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:src="@drawable/movie_poster4"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vikram"
                android:textStyle="bold"
                android:textColor="#222F3E"
                android:gravity="center"
                android:paddingTop="8dp"/>
        </LinearLayout>

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
